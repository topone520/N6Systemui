<?xml version="1.0" encoding="utf-8"?>
<com.adayo.systemui.windows.views.BlurTransitionView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="1000px"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_negative_bg"
    tools:ignore="PxUsage">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="1000px"
        android:layout_height="160px">

        <com.adayo.systemui.windows.views.SwitchButtonVe
            android:id="@+id/wifi_switch_btn"
            android:layout_width="72px"
            android:layout_height="44px"
            android:layout_centerVertical="true"
            android:layout_marginStart="60px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="172px"
            android:text="@string/screen_wifi_name"
            android:textFontWeight="500"
            android:textSize="40px"
            android:textColor="@color/hvac_title_color"/>

        <RelativeLayout
            android:id="@+id/rl_wifi_more"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64px"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20px"
                android:layout_toStartOf="@id/iv_wifi_more"
                android:text="@string/menu_setting"
                android:textColor="@color/hvac_title_color1"
                android:textFontWeight="400"
                android:textSize="34px" />

            <ImageView
                android:id="@+id/iv_wifi_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5px"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/ivi_menu_down_icon_pull_down_n" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="1000px"
        android:layout_height="1px"
        android:layout_below="@id/rl_top"
        android:background="@color/c_80_3D" />

    <RelativeLayout
        android:id="@+id/rl_wifi"
        android:layout_width="wrap_content"
        android:layout_height="380px"
        android:layout_marginTop="160px"
        android:visibility="gone">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_linking_device"
            android:layout_width="1000px"
            android:layout_height="140px"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_wifi_device_paired"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_nearby_networks"
            android:layout_width="112px"
            android:layout_height="42px"
            android:layout_marginLeft="60px"
            android:layout_marginTop="22px"
            android:layout_marginBottom="15px"
            android:layout_below="@+id/rv_linking_device"
            android:text="@string/screen_wifi_area"
            android:textColor="@color/hvac_title_color1"
            android:textSize="28px"/>
        <View
            android:layout_width="880px"
            android:layout_height="1px"
            android:layout_marginStart="60px"
            android:layout_marginEnd="60px"
            android:layout_below="@id/tv_nearby_networks"
            android:background="@color/c_80_3D" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_nearby_networks"
            android:layout_width="1000px"
            android:layout_height="120px"
            android:layout_below="@+id/tv_nearby_networks"
            tools:listitem="@layout/item_wifi_device_available"/>
        <View
            android:layout_width="880px"
            android:layout_height="1px"
            android:layout_marginStart="60px"
            android:layout_marginEnd="60px"
            android:layout_below="@id/rv_nearby_networks"
            android:background="@color/c_80_3D" />
    </RelativeLayout>


</com.adayo.systemui.windows.views.BlurTransitionView>