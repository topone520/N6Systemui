<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="640px"
    android:layout_height="440px"
    android:background="@drawable/comm_c2d3540_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px"
        android:text="提示"
        android:textColor="@color/hvac_title_color"
        android:textSize="40px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/error_tips1"
        android:textColor="@color/hvac_title_color1"
        android:textFontWeight="400"
        android:textSize="40px" />

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="190px"
        android:layout_height="90px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15px"
        android:background="@drawable/comm_c4972b8_bg"
        android:gravity="center"
        android:text="@string/sure"
        android:textColor="@color/hvac_white"
        android:textFontWeight="400"
        android:textSize="40px" />

</RelativeLayout>