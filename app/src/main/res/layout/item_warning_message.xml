<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1000px"
    android:layout_height="160px"
    android:layout_marginTop="24px"
    android:background="@drawable/bg_message_center_item"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="36px"
            android:layout_height="36px"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="40px"
            android:src="@mipmap/ivi_new_notselect"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="82px"
            android:layout_height="82px"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="48px">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_gravity="center"
                android:layout_marginTop="1px"
                android:src="@mipmap/ivi_new_icon_warnning" />
            <ImageView
                android:id="@+id/iv_unread"
                android:layout_width="16px"
                android:layout_height="16px"
                android:layout_gravity="end"
                android:src="@drawable/bg_red_circle_point_16r"
                android:visibility="gone" />


        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32px"
                android:layout_marginTop="33px"
                android:layout_marginEnd="48px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="极狐系统消息"
                    android:textColor="@color/c_message"
                    android:textFontWeight="400"
                    android:textSize="34px" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.7"
                    android:gravity="end"
                    android:textColor="@color/c_message"
                    android:textFontWeight="400"
                    android:textSize="28px"
                    tools:text="1分钟前" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32px"
                android:layout_marginTop="4px"
                android:alpha="0.4"
                android:ellipsize="end"
                android:maxLength="24"
                android:maxLines="1"
                android:textColor="@color/c_message"
                android:textFontWeight="400"
                android:textSize="28px"
                tools:text="观影特权:广告特权、1080P、帧绮映画、杜比全景声、杜比视…" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>