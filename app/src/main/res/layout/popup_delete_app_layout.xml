<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="720px"
    android:layout_height="360px"
    android:background="@drawable/comm_c2d3540_bg"
    tools:ignore="PxUsage">

    <TextView
        android:id="@+id/pop_title"
        android:layout_width="wrap_content"
        android:layout_height="52px"
        android:layout_marginTop="70px"
        android:gravity="center"
        android:textColor="@color/hvac_title_color"
        android:textFontWeight="400"
        android:textSize="36px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="300px"
        android:layout_height="80px"
        android:layout_marginLeft="40px"
        android:layout_marginTop="240px"
        android:background="@color/c_b9_45_3c"
        android:text="@string/delete_text"
        android:textColor="@color/hvac_title_color"
        android:textFontWeight="400"
        android:textSize="32px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="300px"
        android:layout_height="80px"
        android:layout_marginLeft="40px"
        android:background="@color/c_3e_4a_5d"
        android:text="@string/cancel_text"
        android:textColor="@color/hvac_title_color"
        android:textFontWeight="400"
        android:textSize="32px"
        app:layout_constraintStart_toEndOf="@id/delete_btn"
        app:layout_constraintTop_toTopOf="@id/delete_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>