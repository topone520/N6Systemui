<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_scene_item"
    android:layout_width="570px"
    android:layout_height="424px"
    android:layout_marginEnd="40px"
    android:background="@mipmap/ivi_menu_down_image_wake_mode"
    android:orientation="vertical"
    tools:ignore="PxUsage">

    <TextView
        android:id="@+id/iv_item_scene_Level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56px"
        android:layout_marginTop="56px"
        android:text="@string/screen_scene_take_a_nap"
        android:textColor="#ffFFFFFF"
        android:textFontWeight="600"
        android:textSize="56px" />

    <TextView
        android:id="@+id/iv_item_scene_sel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56px"
        android:layout_marginTop="138px"
        android:text="aaaa"
        android:textFontWeight="400"
        android:textSize="30px" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/iv_item_music"
        android:layout_width="234px"
        android:layout_height="80px"
        android:layout_marginLeft="296px"
        android:layout_marginTop="304px"
        android:background="@drawable/scene_item_bg"
        android:text="立即运行"
        android:textColor="@color/hvac_title_color"
        android:textFontWeight="400"
        android:textSize="34px" />
</RelativeLayout>