<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_breeze"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_gravity="center"
        android:layout_marginLeft="4px"
        android:src="@mipmap/ivi_ac_icon_column_reduced_n" />

    <com.adayo.systemui.windows.views.hvac.HvacSpeedSeekBar
        android:id="@+id/win_speed_adjust"
        android:layout_width="438px"
        android:layout_height="32px"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginStart="0px"
        android:layout_marginEnd="0px"
        android:max="7"
        android:maxHeight="17px"
        android:padding="0px"
        android:progressDrawable="@drawable/seekbar_background"
        android:thumb="@drawable/seekbar_thumb"
        android:thumbOffset="0px" />


    <ImageView
        android:id="@+id/iv_gale"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_gravity="center"
        android:layout_marginLeft="10px"
        android:src="@mipmap/ivi_ac_icon_column_increase_n" />

</LinearLayout>