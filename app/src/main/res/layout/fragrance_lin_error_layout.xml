<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/con_error_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ivi_comm_day_bg">

    <ImageView
        android:id="@+id/img_fragrance_error"
        android:layout_width="346px"
        android:layout_height="260px"
        android:layout_centerInParent="true"
        android:background="@mipmap/ivi_ac_fragrance_default2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_fragrance_error"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60px"
        android:text="@string/fragrance_slot_null"
        android:textColor="@color/hvac_title_color1"
        android:textFontWeight="400"
        android:textSize="32px" />


</RelativeLayout>