<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="1600px"
    android:layout_height="440px"
    android:background="@drawable/comm_c2d3540_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px"
        android:text="@string/hvac_intelligence_air"
        android:textColor="@color/hvac_white"
        android:textSize="40px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68px"
        android:layout_marginTop="192px"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/cb_rapid"
            android:layout_width="240px"
            android:layout_height="190px"
            android:background="@drawable/comm_c39414f_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/vtp_ac_icon_temperature_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="@string/rapid_temperature_control"
                android:textColor="@color/white40"
                android:textSize="32px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cb_pur_air"
            android:layout_width="240px"
            android:layout_height="190px"
            android:layout_marginLeft="40px"
            android:background="@drawable/comm_c39414f_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/vtp_ac_icon_purification_n" />

            <TextView
                android:id="@+id/tv_pur_air"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="@string/air_purification"
                android:textColor="@color/white40"
                android:textSize="32px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_water_ions"
            android:layout_width="240px"
            android:layout_height="190px"
            android:layout_marginLeft="40px"
            android:background="@drawable/comm_c39414f_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/vtp_ac_icon_sterilization_n" />

            <TextView
                android:id="@+id/tv_water_ions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="@string/negative_ion_sterilization"
                android:textColor="@color/white40"
                android:textSize="32px" />

        </LinearLayout>

        <com.adayo.systemui.windows.views.hvac.VtpPMView
            android:id="@+id/pm_view"
            android:layout_width="240px"
            android:layout_height="190px"
            android:layout_marginLeft="40px"
            android:background="@drawable/bg_hvac_auto_btn" />

        <LinearLayout
            android:layout_width="240px"
            android:layout_height="190px"
            android:layout_marginLeft="40px"
            android:background="@drawable/bg_hvac_auto_btn"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_air_dry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/vtp_ac_icon_dry_n" />

            <TextView
                android:id="@+id/tv_air_dry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="@string/self_drying"
                android:textColor="@color/hvac_white"
                android:textSize="32px" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>