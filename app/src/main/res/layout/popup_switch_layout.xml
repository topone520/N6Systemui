<?xml version="1.0" encoding="utf-8"?>
<com.adayo.systemui.windows.views.BlurTransitionView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="600px"
    android:layout_height="120px"
    android:background="@drawable/dialog_negative_bg">

    <com.adayo.systemui.windows.views.SwitchButtonVe
        android:id="@+id/switch_btn"
        android:layout_width="72px"
        android:layout_height="44px"
        android:layout_marginLeft="40px"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/switch_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/switch_btn"
        android:layout_marginLeft="40px"
        android:textFontWeight="400"
        android:textColor="@color/hvac_white"
        android:textSize="34px"/>

</com.adayo.systemui.windows.views.BlurTransitionView>