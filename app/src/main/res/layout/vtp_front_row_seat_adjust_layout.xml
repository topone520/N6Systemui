<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1776px"
    android:layout_height="784px"
    android:background="@drawable/comm_c2d3540_bg"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_marginTop="40px"
            android:text="@string/seat_main_adjust"
            android:textColor="@color/hvac_white"
            android:textFontWeight="400"
            android:textSize="40px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_ac_seat_seat_left"
            android:layout_width="384px"
            android:layout_height="480px"
            android:layout_marginLeft="69px"
            android:layout_marginTop="244px"
            android:background="@mipmap/ivi_ac_seat_seat_left"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--        主驾驶靠背调节-->
        <com.adayo.systemui.windows.views.seat.HorSlideView
            android:id="@+id/driver_backrest"
            android:layout_width="160px"
            android:layout_height="44px"
            android:layout_marginTop="153px"
            android:layout_marginRight="234px"
            app:layout_constraintEnd_toEndOf="@id/iv_ac_seat_seat_left"
            app:layout_constraintTop_toTopOf="@id/iv_ac_seat_seat_left" />

        <!--        主驾驶坐垫调节-->
        <com.adayo.systemui.windows.views.seat.VerSlideView
            android:id="@+id/driver_cushion"
            android:layout_width="44px"
            android:layout_height="160px"
            android:layout_marginTop="264px"
            android:layout_marginRight="60px"
            app:layout_constraintEnd_toEndOf="@id/iv_ac_seat_seat_left"
            app:layout_constraintTop_toTopOf="@id/iv_ac_seat_seat_left" />

        <com.adayo.systemui.windows.views.seat.CrossSlideView
            android:id="@+id/driver_cross_adjust"
            android:layout_width="160px"
            android:layout_height="160px"
            android:layout_marginTop="290px"
            android:layout_marginRight="237px"
            app:layout_constraintEnd_toEndOf="@id/iv_ac_seat_seat_left"
            app:layout_constraintTop_toTopOf="@id/iv_ac_seat_seat_left" />

        <TextView
            android:id="@+id/tv_seat_restore_left"
            android:layout_width="180px"
            android:layout_height="80px"
            android:layout_marginStart="291px"
            android:layout_marginTop="164px"
            android:background="@drawable/comm_c3e4a5d_bg"
            android:gravity="center"
            android:text="@string/seat_restore"
            android:textColor="@color/white70"
            android:textSize="32px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_seat_save_left"
            android:layout_width="180px"
            android:layout_height="80px"
            android:layout_marginStart="291px"
            android:layout_marginTop="39px"
            android:background="@drawable/comm_c3e4a5d_bg"
            android:gravity="center"
            android:text="@string/seat_save"
            android:textColor="@color/white70"
            android:textSize="32px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_seat_restore_left"
            app:layout_goneMarginTop="164px" />

        <com.adayo.systemui.windows.views.seat.SeatMemoryView
            android:id="@+id/driver_memory"
            android:layout_width="320px"
            android:layout_height="wrap_content"
            android:layout_marginTop="164px"
            android:layout_marginRight="56px"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.adayo.systemui.windows.views.seat.SeatUsherView
            android:id="@+id/driver_usher"
            android:layout_width="320px"
            android:layout_height="100px"
            android:layout_marginRight="56px"
            android:layout_marginBottom="100px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <View
            android:layout_width="2px"
            android:layout_height="520px"
            android:layout_marginTop="122dp"
            android:background="@color/c10ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:layout_marginRight="80px"
            android:text="@string/seat_co_adjust"
            android:textColor="@color/hvac_white"
            android:textFontWeight="400"
            android:textSize="40px"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.adayo.systemui.windows.views.seat.SeatMemoryView
            android:id="@+id/copilot_memory"
            android:layout_width="320px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="57px"
            android:layout_marginTop="164px"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.adayo.systemui.windows.views.seat.SeatUsherView
            android:id="@+id/copilot_usher"
            android:layout_width="320px"
            android:layout_height="100px"
            android:layout_marginLeft="56px"
            android:layout_marginBottom="100px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/iv_ac_seat_seat_right"
            android:layout_width="384px"
            android:layout_height="480px"
            android:layout_marginTop="244px"
            android:layout_marginRight="69px"
            android:background="@mipmap/ivi_ac_seat_seat_right"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--        副驾驶靠背调节-->
        <com.adayo.systemui.windows.views.seat.HorSlideView
            android:id="@+id/copilot_backrest"
            android:layout_width="160px"
            android:layout_height="44px"
            android:layout_marginStart="225px"
            android:layout_marginTop="153px"
            app:layout_constraintStart_toStartOf="@id/iv_ac_seat_seat_right"
            app:layout_constraintTop_toTopOf="@id/iv_ac_seat_seat_right" />

        <!--        副驾驶坐垫调节-->
        <com.adayo.systemui.windows.views.seat.VerSlideView
            android:id="@+id/copilot_cushion"
            android:layout_width="44px"
            android:layout_height="160px"
            android:layout_marginStart="54px"
            android:layout_marginBottom="110px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/iv_ac_seat_seat_right" />

        <com.adayo.systemui.windows.views.seat.CrossSlideView
            android:id="@+id/copilot_cross_adjust"
            android:layout_width="160px"
            android:layout_height="160px"
            android:layout_marginStart="237px"
            android:layout_marginTop="290px"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@id/iv_ac_seat_seat_right"
            app:layout_constraintTop_toTopOf="@id/iv_ac_seat_seat_right" />

        <TextView
            android:id="@+id/tv_seat_restore_right"
            android:layout_width="180px"
            android:layout_height="80px"
            android:layout_marginTop="164px"
            android:layout_marginEnd="291px"
            android:background="@drawable/comm_c3e4a5d_bg"
            android:gravity="center"
            android:text="@string/seat_restore"
            android:textColor="@color/white70"
            android:textSize="32px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_seat_save_right"
            android:layout_width="180px"
            android:layout_height="80px"
            android:layout_marginTop="39px"
            android:layout_marginEnd="291px"
            android:background="@drawable/comm_c3e4a5d_bg"
            android:gravity="center"
            android:text="@string/seat_save"
            android:textColor="@color/white70"
            android:textSize="32px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_seat_restore_right"
            app:layout_goneMarginTop="164px" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>