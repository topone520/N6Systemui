<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relat_view_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90070707">

    <RelativeLayout
        android:layout_width="620px"
        android:layout_height="440px"
        android:layout_gravity="end"
        android:layout_marginTop="88px"
        android:layout_marginEnd="661px"
        android:background="@drawable/ota_update_dialog_bg">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38px"
            android:text=""
            android:textColor="@color/c_message"
            android:textFontWeight="400"
            android:textSize="40px" />

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_marginTop="38px"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38px"
            android:textColor="@color/c_message"
            android:textFontWeight="400"
            android:textSize="36px" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tips"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18px"
            android:alpha="0.45"
            android:textColor="@color/c_message"
            android:textFontWeight="400"
            android:textSize="28px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tips"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40px"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/yes"
                android:layout_width="250px"
                android:layout_height="80px"
                android:background="@drawable/btn_complete_blue_bg"
                android:gravity="center"
                android:text="@string/look_detail"
                android:textColor="@color/hvac_white"
                android:textFontWeight="500"
                android:textSize="24px"
                android:visibility="visible" />

            <TextView
                android:id="@+id/no"
                android:layout_width="250px"
                android:layout_height="80px"
                android:layout_marginLeft="56px"
                android:background="@drawable/ota_update_dialog_btn_bg"
                android:gravity="center"
                android:text="@string/no_update"
                android:textColor="@color/c_message"
                android:textFontWeight="500"
                android:textSize="24px"
                android:visibility="visible" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>