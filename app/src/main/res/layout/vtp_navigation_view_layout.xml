<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1920px"
    android:layout_height="120px"
    android:background="@color/black">

    <ImageView
        android:id="@+id/iv_bg_1"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginLeft="108px"
        android:layout_marginTop="20px"
        android:background="@drawable/comm_262e3b_bg" />

    <ImageView
        android:id="@+id/iv_bg_2"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginLeft="284px"
        android:layout_marginTop="20px"
        android:background="@drawable/comm_262e3b_bg"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_bg_3"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginLeft="934px"
        android:layout_marginTop="20px"
        android:background="@drawable/comm_262e3b_bg"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_bg_4"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20px"
        android:layout_marginRight="95px"
        android:background="@drawable/comm_262e3b_bg"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_intent_vehicle"
            style="@style/VtpNavigationImageViewStyle"
            android:layout_marginLeft="120px"
            android:background="@mipmap/vtp_dock_icon_home_n" />

        <ImageView
            android:id="@+id/iv_intent_setting"
            style="@style/VtpNavigationImageViewStyle"
            android:layout_marginLeft="120px"
            android:background="@mipmap/vtp_dock_icon_setup_n" />


        <com.adayo.systemui.windows.views.seat.VtpSeatHeatImageView
            android:id="@+id/iv_driver_heat"
            style="@style/VtpNavigationImageViewStyle"
            android:layout_marginLeft="120px"
            android:src="@mipmap/vtp_dock_icon_seat_left_n" />

        <com.adayo.systemui.windows.views.hvac.VtpHorTempSelectorView
            android:id="@+id/hor_driver_temp"
            android:layout_width="230px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="102px" />

        <ImageView
            android:id="@+id/iv_intent_hvac"
            style="@style/VtpNavigationImageViewStyle"
            android:layout_marginLeft="85px"
            android:background="@mipmap/wind_white" />

        <com.adayo.systemui.windows.views.hvac.VtpHorTempSelectorView
            android:id="@+id/hor_copilot_temp"
            android:layout_width="230px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="85px" />

        <com.adayo.systemui.windows.views.seat.VtpSeatHeatImageView
            android:id="@+id/iv_copilot_heat"
            style="@style/VtpNavigationImageViewStyle"
            android:layout_marginLeft="90px"
            android:src="@mipmap/vtp_dock_icon_seat_right_n" />

        <CheckBox
            android:id="@+id/cb_wind_circulate"
            style="@style/VtpNavigationImageViewStyle"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="108px"
            android:background="@drawable/vtp_cb_wind_circulate"
            android:button="@null" />

        <ImageView
            android:id="@+id/iv_voice"
            style="@style/VtpNavigationImageViewStyle"
            android:layout_marginLeft="108px"
            android:background="@mipmap/vtp_dock_icon_volume_n" />
    </LinearLayout>

</RelativeLayout>