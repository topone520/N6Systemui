<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.adayo.systemui.windows.views.fragrance.VtpFragranceSlotBgView
        android:id="@+id/fragrance_slot_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/frag_system_error_view"
        layout="@layout/fragrance_system_error_layout"
        android:visibility="gone" />

    <include
        android:id="@+id/frag_lin_error_view"
        layout="@layout/fragrance_lin_error_layout"
        android:visibility="visible" />


    <com.adayo.systemui.windows.views.fragrance.VtpFragranceSlotView
        android:id="@+id/fragrance_a_view"
        android:layout_width="420px"
        android:layout_height="100px"
        android:layout_marginLeft="250px"
        android:layout_marginBottom="100px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.adayo.systemui.windows.views.fragrance.VtpFragranceSlotView
        android:id="@+id/fragrance_b_view"
        android:layout_width="420px"
        android:layout_height="100px"
        android:layout_marginLeft="80px"
        android:layout_marginBottom="100px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/fragrance_a_view" />

    <com.adayo.systemui.windows.views.fragrance.VtpFragranceSlotView
        android:id="@+id/fragrance_c_view"
        android:layout_width="420px"
        android:layout_height="100px"
        android:layout_marginLeft="80px"
        android:layout_marginBottom="100px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/fragrance_b_view" />

    <!--    香氛编辑界面-->
    <LinearLayout
        android:id="@+id/lin_edit_view"
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:layout_marginTop="472px"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edit_title"
            android:layout_width="470px"
            android:layout_height="100px"
            android:hint="@string/input_fragrance_hint_name"
            android:maxLength="8"
            android:maxLines="1"
            android:paddingLeft="40px"
            android:singleLine="true"
            android:textColor="@color/hvac_white"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_save_title"
            android:layout_width="144px"
            android:layout_height="100px"
            android:layout_marginLeft="40px"
            android:background="@drawable/comm_c3e4a5d_bg"
            android:gravity="center"
            android:text="@string/seat_save"
            android:textColor="@color/hvac_white"
            android:textFontWeight="400"
            android:textSize="34px" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivi_seat_close"
        android:layout_width="204px"
        android:layout_height="204px"
        android:padding="72px"
        android:rotation="90"
        android:src="@mipmap/vtp_ac_icon_back_n"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>