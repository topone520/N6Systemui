<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="230px"
    android:layout_height="100px">

    <LinearLayout
        android:id="@+id/linear_temp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_reduce"
            android:layout_width="56px"
            android:layout_height="56px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ivi_home_icon_left_n" />

        <TextView
            android:id="@+id/tv_temp"
            android:layout_width="117px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Hi"
            android:textColor="@color/hvac_white"
            android:textSize="52px" />

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="56px"
            android:layout_height="56px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ivi_home_icon_right_n" />
    </LinearLayout>


    <com.adayo.systemui.windows.views.hvac.EHorizontalSelectedView
        android:id="@+id/hor_temp_view"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_centerVertical="true"
        android:background="@mipmap/ivi_ac_temperature_control_bule_bg"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>