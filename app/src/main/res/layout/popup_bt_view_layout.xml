<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_negative_bg"
    tools:ignore="MissingConstraints,PxUsage">
    <com.adayo.systemui.windows.views.BlurTransitionView
        android:layout_width="1000px"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="1000px"
            android:layout_height="160px">

            <com.adayo.systemui.windows.views.SwitchButtonVe
                android:id="@+id/bt_switch_btn"
                android:layout_width="72px"
                android:layout_height="44px"
                android:layout_centerVertical="true"
                android:layout_marginStart="60px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="172px"
                android:text="@string/screen_bluetooth_name"
                android:textFontWeight="500"
                android:textSize="40px"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/bt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="280px"
                android:text="@string/screen_scene_bluetooth_fox"
                android:textColor="@color/c_40_FF"
                android:textFontWeight="400"
                android:textSize="28px" />

            <RelativeLayout
                android:id="@+id/rl_bt_more"
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:layout_marginEnd="64px"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20px"
                    android:layout_toStartOf="@id/iv_bt_more"
                    android:text="@string/menu_setting"
                    android:textColor="@color/c_80_FF"
                    android:textFontWeight="400"
                    android:textSize="34px" />

                <ImageView
                    android:id="@+id/iv_bt_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:paddingBottom="5px"
                    android:src="@mipmap/ivi_menu_down_icon_pull_down_n" />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="1000px"
            android:layout_height="1px"
            android:layout_below="@id/rl_top"
            android:background="@color/c_80_3D" />

        <RelativeLayout
            android:id="@+id/bluetooth_rl"
            android:layout_width="wrap_content"
            android:layout_height="380px"
            android:layout_marginTop="160px"
            android:visibility="gone">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_linking_device"
                android:layout_width="1000px"
                android:layout_height="140px"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_bt_nearby_equipment"
                android:layout_width="112px"
                android:layout_height="42px"
                android:layout_marginLeft="60px"
                android:layout_marginTop="22px"
                android:layout_marginBottom="15px"
                android:layout_below="@+id/rv_linking_device"
                android:text="@string/screen_scene_nearby_devices"
                android:textColor="#B3FFFFFF"
                android:textSize="28px"/>
            <View
                android:layout_width="880px"
                android:layout_height="1px"
                android:layout_marginStart="60px"
                android:layout_marginEnd="60px"
                android:layout_below="@id/tv_bt_nearby_equipment"
                android:background="@color/c_80_3D" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_bt_nearby_equipment"
                android:layout_width="1000px"
                android:layout_height="120px"
                android:layout_below="@+id/tv_bt_nearby_equipment"
                tools:listitem="@layout/item_bluetooth_device_available"/>
            <View
                android:layout_width="880px"
                android:layout_height="1px"
                android:layout_marginStart="60px"
                android:layout_marginEnd="60px"
                android:layout_below="@id/rv_bt_nearby_equipment"
                android:background="@color/c_80_3D" />
        </RelativeLayout>

    </com.adayo.systemui.windows.views.BlurTransitionView>

</androidx.constraintlayout.widget.ConstraintLayout>